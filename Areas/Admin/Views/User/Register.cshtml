@model WebBlog.ViewModels.RegisterVM
@{
    ViewData["Title"] = "Register";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <a asp-area="Admin" asp-controller="User" asp-action="register" class="btn btn-primary mb-1">Tạo User</a>
    <div class="card">
        <div class="card-header bg-primary">
            <h4 class="card-title text-white">Thêm người dùng</h4>
        </div>
        <div class="card-body">
            <form method="post" asp-area="Admin" asp-controller="User" asp-action="Login">
            <div class="form-group">
                <input asp-for="FirstName" type="text" class="form-control form-control-user"
                       id="exampleInputEmail" aria-describedby="emailHelp"
                       placeholder="FirstName...">
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="LastName" type="text" class="form-control form-control-user"
                       id="exampleInputEmail" aria-describedby="emailHelp"
                       placeholder="LastName...">
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Email" type="text" class="form-control form-control-user"
                       id="exampleInputEmail" aria-describedby="emailHelp"
                       placeholder="Email...">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="UserName" type="text" class="form-control form-control-user"
                       id="exampleInputEmail" aria-describedby="emailHelp"
                       placeholder="Enter UserName...">
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Password" type="password" class="form-control form-control-user"
                       id="exampleInputPassword" placeholder="Password">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="RePassword" type="password" class="form-control form-control-user"
                       id="exampleInputPassword" placeholder="RePassword">
                <span asp-validation-for="RePassword" class="text-danger"></span>
            </div>
                <div class="mb-2">
                    <input asp-for="IsAdmin" type="checkbox" class="custom-checkbox">
                    <label>Is Admin?</label>
                </div>
            <input type="submit" class="btn btn-primary btn-user btn-block" value="Đăng ký">
            </form>
            <hr>
            <div class="text-center">
                <a class="small" href="Login.html">Quay lại</a>
            </div>
        </div>
    </div>
</div>